<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="550dp"
    android:layout_height="300dp"
    android:layout_margin="15sp"
    android:background="@drawable/click_item_round"
    android:orientation="horizontal"
    tools:context=".SubPastaActivity"
    android:elevation="50dp">

    <ImageView
        android:id="@+id/orangeImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/water_orange" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"

        android:orientation="vertical">
        <TextView
            android:id="@+id/orangeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="113dp"
            android:text="오렌지 에이드"
            android:fontFamily="@font/jainan"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#000000"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/orangeText2"
            android:layout_width="266dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="￦ 6,900"
            android:fontFamily="@font/jainan"
            android:textSize="25sp"
            android:gravity="center"/>
    </LinearLayout>



</LinearLayout>